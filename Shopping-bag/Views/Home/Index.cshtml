@model ProductsListViewModel

<div class="text-center">
    <h1 class="display-4">@Model.title 0</h1>
    <div class="container">
        <div class="row">
            @foreach (var @product in Model.Products)
            {
                <div class="col-2">@product.Name <p>@product.Price</p> <a href="#">Add to cart</a></div>
            }
        </div>
    </div>

</div>
