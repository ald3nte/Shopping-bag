@model ProductsListViewModel

<div class="text-center">
    <h1 class="display-4">
        <a 
           asp-controller="ShoppingBag"
           asp-action="ShoppingBagItemsList">
            @Model.title @await Component.InvokeAsync("ShoppingBagSummary")
        </a>        
    </h1>
    <div class="container">
        <div class="row">
            @foreach (var @product in Model.Products)
            {
                <div class="col-2">@product.Name <p>@product.Price</p>
            
                    <a class="btn btn-primary"
                    asp-controller="ShoppingBag"
                    asp-action="AddToBag"
                    asp-route-productId="@product.Id">Add to Cart</a>
                </div>
            }
        </div>
    </div>

</div>
