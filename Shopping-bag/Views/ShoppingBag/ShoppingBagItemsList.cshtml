@model ShoppingBag


<div class="text-center">
    <h1 class="display-4">Koszyk:</h1>
    <div class="container">
        <div class="row">
            @foreach (var @product in Model.Items)
            {
                <div class="col-2">
                    @product.product.Name <p> @product.amount</p>
                </div>
            }
        </div>
    </div>

</div>
